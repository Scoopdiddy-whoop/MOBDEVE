<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/registerbg"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.mobdeve.s18.cuevas.alfonso.legitcheckers.TextViewOutline
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:fontFamily="@font/lilitiaone"
            android:gravity="center"
            android:letterSpacing="0.01"
            android:shadowColor="@color/head_blue"
            android:shadowDx="15"
            android:shadowDy="15"
            android:shadowRadius="0.1"
            android:text="MENU"
            android:textColor="@color/white"
            android:textSize="50sp"
            android:textStyle="bold"
            app:outlineColor="@color/head_blue"
            app:outlineSize="3dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <Button
            android:id="@+id/btn_resume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="80dp"
            android:layout_marginTop="30dp"

            android:paddingVertical="15dp"
            app:backgroundTint = "@null"

            android:text="Resume"
            android:textSize="20sp"
            android:fontFamily="@font/lilitiaone"
            android:background="@drawable/rounded_corners"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <Button
            android:id="@+id/btn_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="80dp"
            android:layout_marginTop="30dp"

            android:paddingVertical="15dp"
            app:backgroundTint = "@null"

            android:text="Settings"
            android:textSize="20sp"
            android:fontFamily="@font/lilitiaone"
            android:background="@drawable/rounded_corners"
            app:layout_constraintTop_toBottomOf="@id/btn_resume"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <Button
            android:id="@+id/btn_quit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="80dp"
            android:layout_marginTop="30dp"

            android:paddingVertical="15dp"
            app:backgroundTint = "@null"

            android:text="Quit"
            android:textSize="20sp"
            android:fontFamily="@font/lilitiaone"
            android:background="@drawable/rounded_corners"
            app:layout_constraintTop_toBottomOf="@id/btn_settings"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>