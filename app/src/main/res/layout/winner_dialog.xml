<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/registerbg"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp">

        <com.mobdeve.s18.cuevas.alfonso.legitcheckers.TextViewOutline
            android:id="@+id/winner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lilitiaone"
            android:paddingTop="30dp"
            android:gravity="center"
            android:letterSpacing="0.01"
            android:shadowColor="@color/head_blue"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="0.1"
            android:text="PLAYER WON THE GAME"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:outlineColor="@color/head_blue"
            app:outlineSize="3dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <Button
            android:id="@+id/btn_goHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="100dp"
            android:paddingVertical="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:backgroundTint = "@null"

            android:text="HOME"
            android:textSize="15sp"
            android:fontFamily="@font/lilitiaone"
            android:background="@drawable/rounded_corners"
            app:layout_constraintTop_toBottomOf="@id/winner"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>